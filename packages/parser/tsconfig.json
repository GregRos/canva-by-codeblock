{
	"compilerOptions": {
		"sourceMap": true,
		"sourceRoot": "src",
		"declaration": true,
		"declarationMap": true,
		"module": "NodeNext",
		"target": "ES2020",
		"noImplicitAny": true,
		"moduleResolution": "nodenext",
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["ES7", "DOM"],
		"outDir": "./dist"
	},
	"include": ["src/**/*.ts"]
}
